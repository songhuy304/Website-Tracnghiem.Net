
@model DoAnCs.Models.EditAccountViewModel

@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";

}


<div class="order">
    <div class="head">

    </div>
    <div class="card-body">
        @using (Html.BeginForm("Edit", "Account", FormMethod.Post))
        {
            @Html.ValidationSummary(false)
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label>Tài khoản</label>
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.UserName, null, new { @class = "text-danger" })

            </div>

            <div class="form-group">
                <label>Email</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })

            </div>
            <div class="form-group">
                <label>Phone</label>
                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Phone, null, new { @class = "text-danger" })

            </div>
            <div class="form-group">
                <label>Quyền</label>
                @Html.DropDownListFor(x => x.Role, ViewBag.Role as SelectList, new { @class = "form-control" , @multiple="multiple"})
                @Html.ValidationMessageFor(x => x.Role, null, new { @class = "text-danger" })

            </div>
          
           
            <div class="form-group">
                <button type="submit" class="btn btn-success">Thêm mới</button>
            </div>
        }
    </div>
</div>
<!-- Main content -->
