<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("UploadWord", "Question", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="input-group mb-3">
                        <input type="file" name="wordFile" class="form-control" id="inputGroupFile02">
                        <input class="input-group-text" type="submit" value="Upload" />
                    </div>
                }
            <p class="text-center">
                @Html.ActionLink("Tải về file Mẫu", "DownloadFile", "Question")
                        </p>                <!-- Nút để kích hoạt tải xuống -->
               
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        
            </div>
        </div>
    </div>
</div>
