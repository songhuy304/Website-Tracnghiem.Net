@using Microsoft.AspNet.Identity.EntityFramework
@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "Danh sách Quyền";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";

}
<div class="order">
    <div class="head">
        <a href="/admin/roles/create" class="btn btn-success">Thêm mới</a>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tên</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    var i = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.Name</td>
                            <td>
                                <a href="/admin/Roles/edit/@item.Id " class="btn btn-primary"><i class="fa fa-edit"></i></a>
                                <a href="#" class="btn btn-danger" onclick="confirmDelete('@item.Id')">
                                    <i class="fa fa-trash" style="color: white;"></i>
                                </a>
                            </td>
                        </tr>
                        i++;
                    }

                }
            </tbody>
        </table>
    </div>
</div>

<!-- Main content -->

<!-- /.content -->
@section scripts{
    <script>
        function confirmDelete(roleId) {
            if (confirm('Are you sure you want to delete this role?')) {
                location.href = '/admin/Roles/Delete?roleId=' + roleId;
            }
        }
    </script>
    }