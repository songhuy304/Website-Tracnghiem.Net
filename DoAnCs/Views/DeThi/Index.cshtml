@model PagedList.PagedList<DoAnCs.Models.Exam>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container1">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb" style=" background-color:#ffffff">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Library</li>
        </ol>
    </nav>
</div>


@if (Model != null && Model.Any())
{
    <section class="dethii">
        <div class="container">
            @foreach (var item in Model)
            {
                <div class="card-item">
                    <div class="card">
                        <div class="card-header" style="background-color:lemonchiffon">
                            <strong>@item.NameExam</strong>
                        </div>
                        <div class="card-body">
                            <p class="card-text">Số Lượng Câu Hỏi: @item.NumberQ</p>
                            <p data-id="@item.Time" class="card-text">Số Phút: @item.Time</p>

                            <a href="/DeThi/DeThi/@item.IdExam" class="btnvaothi btn btn-primary">Vào Thi</a>




                        </div>
                    </div>
                </div>

            }

        </div>
    </section>

}
else
{
    <h3>Không Có đề Thi Nào</h3>
}


