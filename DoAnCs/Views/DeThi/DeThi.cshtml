    @section scripts{
        <script>
            $(document).ready(function () {

                $('.form-control.hienthidapan').click(function () {
                    // Tìm radio button trước phần tử đang được click và thiết lập checked cho nó
                    $(this).prev().find('input[type="radio"]').prop('checked', true);
                });

                // xử lý btn câu hỏi 
               
                
                var currentQuestion = 1;
                var totalQuestions = document.getElementById("questionCount").getAttribute("data-countcauhoi");

                // Ẩn tất cả các câu hỏi trừ câu hỏi đầu tiên
                hideAllQuestions();
                showQuestion(currentQuestion);

                // Xử lý sự kiện khi nhấn nút "Next"
                document.getElementById("nextButton").addEventListener("click", function () {
                    if (currentQuestion < totalQuestions) {
                        hideQuestion(currentQuestion);
                        currentQuestion++;
                        showQuestion(currentQuestion);
                    }
                });

                // Xử lý sự kiện khi nhấn nút "Back"
                document.getElementById("backButton").addEventListener("click", function () {
                    if (currentQuestion > 1) {
                        hideQuestion(currentQuestion);
                        currentQuestion--;
                        showQuestion(currentQuestion);
                    }
                });

                // Ẩn tất cả các câu hỏi
                function hideAllQuestions() {
                    for (var i = 1; i <= totalQuestions; i++) {
                        hideQuestion(i);
                    }
                }

                // Ẩn câu hỏi có số thứ tự 'questionNumber'
                function hideQuestion(questionNumber) {
                    var question = document.getElementById("question__" + questionNumber);
                    question.style.display = "none";
                }

                // Hiển thị câu hỏi có số thứ tự 'questionNumber'
                function showQuestion(questionNumber) {
                    var question = document.getElementById("question__" + questionNumber);
                    question.style.display = "flex";
                }

             

                // Gán sự kiện click cho mỗi nút button
                $('.butoon1').on('click', function () {
                    var questionNumber = $(this).data('question-number');
                    hideQuestion(currentQuestion); // Ẩn câu hỏi hiện tại
                    showQuestion(questionNumber); // Hiển thị câu hỏi mới
                    currentQuestion = questionNumber; // Cập nhật số thứ tự câu hỏi hiện tại
                });
            });
        </script>


    }

