
@model List<DoAnCs.Models.Question>
@using System.Text.RegularExpressions;
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>

    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="~/Content/asset/styles/formthi.css" rel="stylesheet" />
    <link href="~/Content/asset/styles/css.css" rel="stylesheet" />

</head>


<body>

    @*@using (Html.BeginForm("DeThi", "DeThi", FormMethod.Post, new { id = "examForm" }))
        {*@



    @if (Model != null)
    {
        <div class="dem1">
            <div class="demgio">

                <div data-id="@ViewBag.sophut" id="countdow"></div>
                <p id="socauhoi" hidden data-viewbag-value="@ViewBag.socauhoi"></p>
            </div>
            <button type="button" id="btnnop" style="height: 45px; margin-right: 0px; border-radius: 15% / 50%;" class="btn btn-success">Nộp Bài</button>
        </div>
        <div style="margin-top:80px" class="container">
            <div class="row align-items-center">
                <div class="col-sm">
                    <h4 class="text-center">Bài Thi : <span class="text-primary">@ViewBag.tenbaithi</span> </h4>
                    <h4 class="text-center">Số Câu : <span class="text-primary">@ViewBag.socauhoi</span> </h4>
                    <h4 class="text-center">Thời Gian : <span class="text-primary">@ViewBag.sophut</span> </h4>
                    <h4 id="re" name="socaudung"></h4>
                </div>
            </div>
        </div>
        <div id="vl">
            <div id="result"></div>
            <div class="container formthi" style="padding-top:50px">
                @{ var questionNumber = 1;
                    var countcauhoi = 0;}
                @foreach (var item in Model)
                {
                    <div class="row " id="question_@questionNumber">
                        <div class="col-sm-2">
                            <div class="card shadow p-3 mb-5 " id="cardcauhoiformthi">
                                <div class="card-body">
                                    <h5 class="card-title">Câu @questionNumber</h5>
                                    <p class="card-text">Độ Khó </p>
                                </div>
                            </div>
                            <div class="card" id="correct_@item.IdQuestion">
                            </div>
                        </div>
                        <div class="col-sm-7">
                            <div id="cardformthi" class="card  p-3 mb-5">
                                <div class="card-body">
                                    <h4 id="noidungthi" class="card-title">
                                        @{
                                            if (!string.IsNullOrEmpty(item.Contentt))
                                            {
                                                var images = Regex.Matches(item.Contentt, @"<img.*?>");
                                                foreach (Match image in images)
                                                {
                                                    var newImage = Regex.Replace(image.Value, "(width|height)=\".*?\"", "");
                                                    newImage = newImage.Replace("<img", "<img style=\"width: 300px; height: 200px;\"");
                                                    item.Contentt = item.Contentt.Replace(image.Value, newImage);
                                                }
                                            }
                                        }
                                        @Html.Raw(HttpUtility.HtmlDecode(item.Contentt.Trim()))
                                        @if (!string.IsNullOrEmpty(item.HinhAnh))
                                        {
                                            <img src="@item.HinhAnh" style="width: 300px; height: 200px" alt="Ảnh câu hỏi">
                                        }
                                    </h4>
                                    <p class="card-text text-primary">Chọn Đáp Án Đúng .</p>
                                    @foreach (var question in item.AnswerList)
                                    {
                                        var trueisValue = question.Trueis ? 1 : 0;

                                        <div class="input-group mt-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                     <input data-id="@trueisValue" type="radio" name="question_@item.IdQuestion" data-idex="question_@item.IdQuestion+@question.id" id="question_@item.IdQuestion" aria-label="Radio button for following text input">
                                                    

                                                </div>
                                            </div>
                                            <div class="form-control hienthidapan"  data-id="@trueisValue" id="q_@item.IdQuestion">
                                                @Html.Raw(question.Content)
                                            </div>
                                            @*<p class="form-control" data-id="@trueisValue" name="question_@item.IdQuestion" id="q_@item.IdQuestion" aria-label="Text input with radio button">@Html.Raw(question.Content)</p>*@
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    countcauhoi++;
                    questionNumber++;
                }
                <br>
            </div>
        </div>
       


    }
    @*}*@
    <div class="col-md-3" id="cotdanhsach">
