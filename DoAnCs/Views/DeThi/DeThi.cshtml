                @{ var questionNumber = 1;
                    var countcauhoi = 0;}
                @foreach (var item in Model)
                {
                    <div class="row " id="question__@questionNumber">
                        <div class="col-sm-2">
                            <div class="card shadow p-3 mb-5 " id="cardcauhoiformthi">
                                <div class="card-body">
                                    <h5 class="card-title">Câu @questionNumber</h5>
