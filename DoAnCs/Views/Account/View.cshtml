@model List<DoAnCs.Models.Viewmodel.SubjectItem>

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}



<div class="order">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">thêm mới câu Hỏi</h3>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("saveJson", "Question", FormMethod.Post))

                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <!-- your steps content here -->
                        <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">

                            <div class="form-group">
                                <label class="control-label col-md-2">Tên Câu Hỏi</label>
                                <div class="col-md-10">

                                    <input type="text" id="contenntt" name="contenntt" class="form-control" />
                                </div>
                            </div>


                            @for (var i = 0; i < Model.Count; i++)
                            {


                                <div class="form-group">
                                    <div class="row">
                                        <div id="subjectInputs">
                                            <div class="subject">
                                                <label class="col-sm-2 control-label">Đáp Án </label>
                                                <div class="col-sm-6">

                                                    <input type="text" name="ci[@(i)].Content" id="ci_@(i)__Content" class="form-control" value="@Model[i].Content" autocomplete="off" />
                                                </div>
                                                <div class="col-sm-2">
                                                    <div class="form-check">
                                                        <input type="checkbox" name="ci[@(i)].is_true" id="ci_@(i)__is_true" class="form-control" @(Model[i].is_true ? "checked" : "") />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            }

                            <div class="form-group">
                                <button type="button" class="btn btn-primary" id="addSubjec1t">Thêm</button>
                                <a href="/admin/DeThi/Index" class="btn btn-danger">Quay Lại</a>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    }
                </div>
            </div>


        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>

</div>

